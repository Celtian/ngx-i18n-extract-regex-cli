{
  "compilerOptions": {
    "target": "ES2022",
    "types": ["node"],
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strictNullChecks": false,
    "sourceMap": false,
    "outDir": "./dist",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["bin", "src"],
  "exclude": ["dist/**/*"]
}
